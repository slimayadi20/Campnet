{% extends 'calendrier/calendar.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block stylesheets %}
    <style>
        #calendrier{
            width: 80%;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <form style="margin-left: 1200px" action="{{ path('reservation_new')}}">
        <button class="fc-dayGridMonth-button fc-button fc-button-primary fc-button-active">Retour vers ma RÃ©servation</button>
    </form>
    </br>
    {#  {{ dump(data) }}#}
    <div id="calendrier">

    </div>

{% endblock %}

{% block javascripts %}
    <script>
        window.onload = () => {
            let calendarElt = document.querySelector("#calendrier")
            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth',
                locale:'fr',
                timeZone:'Africa/Tunisia',
                headerToolbar: {
                    start: 'prev,next today',
                    center:'title',
                    end:'dayGridMonth,timeGridWeek'
                },
                events: {{ data|raw}}
            })

            calendar.render()
        }
    </script>
{% endblock %}